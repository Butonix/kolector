{{!-- <div class="container"> --}}
    {{!-- {{> mainInfo}} --}}
<div class="offset">
    <div class="os-animation narrow text-center" data-animation="fadeInUp">
        <h3 class="heading">
            Ultimele resurse disponibile public
        </h3>
    </div>
    <div id="resurse" class="resurse os-animation" data-animation="fadeInUp">
        <div class="resurse">
            {{!-- Background video --}}
            <div class="bg-video">
                <video class="bg-video__content" autoplay muted loop>
                    {{!-- https://coverr.co/videos/modem-lights-u4MPlcF4EE --}}
                    <source src="img/Modem-lights.mp4" type="video/mp4">
                    <source src="img/Modem-lights.webm" type="video/webm">
                    Browserul tău nu are support pentru caracteristicile web moderne. Actualizează-l!
                </video>
            </div>

            {{!-- Șablon de resursă în landing --}}
            {{#each resurse}}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <a class="btn btn-dark" href="/resursepublice/{{this.id}}" class="">{{this.title}}</a>
                        </h5>                                   
                    </div>
                    <img class="card-img-top" src="{{this.coperta}}" alt="{{this.title}}">
                    <div class="card-body">

                        <p class="card-text">{{this.description}}</p>
                        {{!-- <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>    --}}
                    </div>
                    <div class="card-footer text-muted">
                        {{!-- {{this.date}} --}}
                        {{this.dataRo}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>